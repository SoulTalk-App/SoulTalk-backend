# Application
APP_NAME=SoulTalk
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Database (PostgreSQL)
# For docker-compose.prod.yml, the password here must match DB_PASSWORD
DB_PASSWORD=change_me_to_a_strong_password
DATABASE_URL=postgresql://soultalk:change_me_to_a_strong_password@postgres:5432/soultalk

# Redis
REDIS_URL=redis://redis:6379

# JWT Configuration â€” generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SECRET_KEY=your-super-secret-key-change-in-production

# Token Expiry
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (get from Facebook Developer Portal)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM_NAME=SoulTalk
EMAIL_FROM_ADDRESS=noreply@soultalkapp.com

# Frontend URL (for email verification links)
FRONTEND_URL=https://soultalkapp.com

# Email Token Expiry
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# CORS
CORS_ORIGINS=["https://soultalkapp.com","https://www.soultalkapp.com"]

# Logging
LOG_LEVEL=INFO
